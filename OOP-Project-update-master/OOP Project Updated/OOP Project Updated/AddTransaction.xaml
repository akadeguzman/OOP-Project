<Window x:Class="OOP_Project_Updated.AddTransaction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_Project_Updated"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="AddTransaction" Height="450" Width="800" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Background="Transparent" WindowStartupLocation="CenterScreen">

    <Grid>

        <Rectangle RadiusY="8" RadiusX="8" Fill="White"/>

        <!--Text Box-->
        <Button  Content="Add Transaction" Click="Button_Click" HorizontalAlignment="Left" Margin="106,394,0,0" VerticalAlignment="Top" Width="139"/>

        <!--Transaction-->

        <ComboBox Name="cmbJewelry" HorizontalAlignment="Left" Margin="145,128,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="CmbJewelry_SelectionChanged">

        </ComboBox>

        <!--Items-->



        <Label Content="Weight:" HorizontalAlignment="Left" Margin="78,194,0,0" VerticalAlignment="Top"/>

        <Label Content="Date:" HorizontalAlignment="Left" Margin="103,349,0,0" VerticalAlignment="Top"/>

        <!--Image-->

        <!---->
        
        <Label Content="Add Transaction" FontFamily="Segoe UI Black" FontSize="20" Margin="30,15" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Content="Customer:" HorizontalAlignment="Left" Margin="57,74,0,0" VerticalAlignment="Top"/>
        
        <Button Click="Button_Click_1" Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}"
        ToolTip="MaterialDesignFloatingActionMiniDarkButton" Margin="259,60,491,342" Height="Auto" Width="Auto" RenderTransformOrigin="0.51,0.516"> 
        <materialDesign:PackIcon
        Kind="Add"
        Height="24"
        Width="24" />
        </Button>
       
        <ComboBox Name="cmbCustomer" HorizontalAlignment="Left" Margin="126,75,0,0" VerticalAlignment="Top" Width="115"/>
        
        <Label Content="Quality:" HorizontalAlignment="Left" Margin="78,156,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbQuality" HorizontalAlignment="Left" Margin="145,156,0,0" VerticalAlignment="Top" Width="120" Height="26" SelectionChanged="CmbQuality_SelectionChanged"/>
        
        <Label Content="Jewelry:" HorizontalAlignment="Left" Margin="78,125,0,0" VerticalAlignment="Top" Width="50"/>
        <TextBox Name="txtWeight" materialDesign:HintAssist.Hint="grams"  Margin="145,195,572,229"/>
        
        
        <Label Content="Condition:" HorizontalAlignment="Left" Margin="63,225,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbCondition"  HorizontalAlignment="Left" Margin="145,224,0,0" VerticalAlignment="Top" Width="120"/>
        
        <Label Content="Amount to Loan:" HorizontalAlignment="Left" Margin="126,285,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="AmountLoaned" HorizontalAlignment="Left" Height="24" Margin="106,308,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="139"/>
        
        <!---->

        <Separator Margin="57,98,491,312"/>
        <Separator Margin="57,259,491,167"/>
        <DatePicker HorizontalAlignment="Left" Margin="145,351,0,0" VerticalAlignment="Top" Width="75"/>

        <materialDesign:Snackbar
        MessageQueue="{materialDesign:MessageQueue}"
        x:Name="SnackbarThree" />
        
        <TextBox x:Name="txtDisplay" HorizontalAlignment="Left" Height="23" Margin="359,311,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
